{
  "swagger" : "2.0",
  "info" : {
    "description" : "Definiciones comunes para Plagas.",
    "version" : "1.0.0",
    "title" : "Plagas Commons"
  },
  "paths" : {
    "/commons/provinciasPartidosLocalidades" : {
      "get" : {
        "tags" : [ "commons", "provincias" ],
        "description" : "Retorna todas las provincias de argentina en JSON\ncon la clave #provincias. La provincia contiene una id\ny un nombre\n",
        "parameters" : [ ],
        "responses" : {
          "200" : {
            "description" : "Se obtuvo la lista de provincias",
            "schema" : {
              "type" : "array",
              "title" : "Provincias",
              "items" : {
                "$ref" : "#/definitions/Provincia"
              }
            }
          },
          "500" : {
            "description" : "Error al obtener los datos.",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      }
    },
    "/commons/paises" : {
      "get" : {
        "tags" : [ "commons" ],
        "description" : "Retorna todos los paises disponibles en RU.",
        "parameters" : [ ],
        "responses" : {
          "200" : {
            "description" : "Se obtuvo la lista de provincias",
            "schema" : {
              "type" : "array",
              "title" : "Provincias",
              "items" : {
                "$ref" : "#/definitions/Pais"
              }
            }
          },
          "500" : {
            "description" : "Error al obtener los datos.",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      }
    },
    "/commons/monitoreadores" : {
      "get" : {
        "tags" : [ "commons", "monitoreo" ],
        "description" : "Retorna todos los monitoreadores disponibles para el usuario\nactualmente logueado.\n",
        "parameters" : [ {
          "name" : "token",
          "in" : "header",
          "description" : "El token de autenticacion proporcionado.",
          "required" : true,
          "type" : "string",
          "default" : "nil",
          "format" : "string"
        }, {
          "name" : "sign",
          "in" : "header",
          "description" : "El sign de autenticacion proporcioando",
          "required" : true,
          "type" : "string",
          "default" : "nil",
          "format" : "string"
        }, {
          "name" : "usuario",
          "in" : "header",
          "description" : "El usuario, por ej. aaraujo",
          "required" : true,
          "type" : "string",
          "format" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Se obtuvieron todos los monitoreadores disponibles",
            "schema" : {
              "type" : "array",
              "title" : "Monitoreadores",
              "items" : {
                "$ref" : "#/definitions/Monitoreador"
              }
            }
          },
          "500" : {
            "description" : "Error al obtener los datos.",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          },
          "401" : {
            "description" : "El usuario no esta autenticado. Token inv√°lido.",
            "schema" : {
              "$ref" : "#/definitions/ErrorNotAuth"
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "Provincia" : {
      "type" : "object",
      "required" : [ "id", "nombre", "partidos" ],
      "properties" : {
        "id" : {
          "type" : "number",
          "minimum" : 0
        },
        "nombre" : {
          "type" : "string"
        },
        "partidos" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Partido"
          }
        }
      },
      "title" : "Provincia"
    },
    "Partido" : {
      "type" : "object",
      "required" : [ "id", "localidades", "nombre" ],
      "properties" : {
        "id" : {
          "type" : "number",
          "minimum" : 0
        },
        "nombre" : {
          "type" : "string"
        },
        "localidades" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Localidad"
          }
        }
      },
      "title" : "Partido"
    },
    "Localidad" : {
      "type" : "object",
      "required" : [ "id", "nombre" ],
      "properties" : {
        "id" : {
          "type" : "number",
          "minimum" : 0
        },
        "nombre" : {
          "type" : "string"
        }
      },
      "title" : "Localidad"
    },
    "Error" : {
      "properties" : {
        "message" : {
          "type" : "string",
          "example" : "Ha ocurrido un error al guardar los datos",
          "default" : "Error"
        }
      },
      "title" : "Mensaje de error"
    },
    "Pais" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer"
        },
        "descripcion" : {
          "type" : "string"
        }
      }
    },
    "Monitoreador" : {
      "type" : "object",
      "required" : [ "id" ],
      "properties" : {
        "id" : {
          "type" : "string"
        },
        "nombre" : {
          "type" : "string",
          "example" : "Juan Carlos|Maria Victoria|Ing. Pablo Perez"
        }
      },
      "title" : "Monitoreador"
    },
    "ErrorNotAuth" : {
      "properties" : {
        "message" : {
          "type" : "string",
          "default" : "El usuario no se encuentra autenticado."
        }
      },
      "title" : "Mensaje de No Autenticado"
    }
  }
}